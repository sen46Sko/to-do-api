{
  "exclude": ["node_modules", "nodeenv"],
  "compilerOptions": {
    "lib": ["es6"],
    "module": "CommonJS",
    "strict": true,
    "target": "es6",
    "types": ["node"],
    "noErrorTruncation": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
  },
  "include": [
    "src/**/*.ts",
    "./*.ts"
  ],
  "ts-node": {
    "files": true
  }
}